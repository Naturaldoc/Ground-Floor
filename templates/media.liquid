{% block content %}
<div>
<h1>Media Content</h1>
<p>
  Basic styling for common media elements
</p>
<hr />
  <div class="row">
    <div class="col col-25">
      <h3>Audio</h3>
      
      <audio controls></audio>
    </div>
    
    <div class="col col-25">
      <h3>Video</h3>
      
      <video controls></video>
    </div>
    
    <div class="col col-25">
      <h3>Img</h3>
      
      <img src="http://lorempixel.com/100/100" alt="a test image" />
      <a href="#!" title="image inside of an anchor tag">
        <img src="http://lorempixel.com/100/100" alt="a test image in a link" /> 
      </a>
    </div>
    
    <div class="col col-25">
      <h3>Figure</h3>
  
      <figure>
        <img src="http://lorempixel.com/400/200" alt="test image" />
        <figcaption>
          Figcaption content
        </figcaption>
      </figure>
    </div>
  </div> <!-- end .row -->
</div>



<!-- Code of above examples -->
<div class="row show-Code">
  <div class="col col-50">
    <strong>Code</strong>
    <code>
      &lt;audio controls><br />
        &nbsp;&nbsp;&lt;source src="audio.ogg" type="audio/ogg" /><br />
        &nbsp;&nbsp;&lt;source src="audio.mp3" type="audio/mpeg" /><br />
        &nbsp;&nbsp;Your browser does not support the audio tag.<br />
      &lt;/audio><br />
      <br />
      &lt;video width="320" height="240" controls><br />
        &nbsp;&nbsp;&lt;source src="movie.mp4" type="video/mp4" /><br />
        &nbsp;&nbsp;&lt;source src="movie.ogg" type="video/ogg" /><br />
        &nbsp;&nbsp;Your browser does not support the video tag.<br />
      &lt;/video> 
    </code>
  </div>

  
  <div class="col col-50">
    <strong>Code</strong>
    <code>
      &lt;img src="img/f00.jpg" alt="a test image" /><br />
      &lt;a href="#!" title="image inside of an anchor tag"><br />
      &nbsp;&nbsp;&lt;img src="img/f00.jpg" alt="a test image in a link" /> <br />
      &lt;/a><br />
      <br />
      &lt;figure><br />
        &nbsp;&nbsp;&lt;img src="img/f00.jpg" alt="test image" /><br />
        &nbsp;&nbsp;&lt;figcaption><br />
          &nbsp;&nbsp;&nbsp;&nbsp;Figcaption content<br />
        &nbsp;&nbsp;&lt;/figcaption><br />
      &lt;/figure>
    </code>

  </div>
</div> <!-- end .row.show-Code -->


{% endblock %}